<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:foregroundTint="#FFFFFF">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="889dp"
        android:layout_height="409dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/helpBtn"
            android:layout_width="296dp"
            android:layout_height="136dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/help"
            android:text="HELP" />

        <ImageButton
            android:id="@+id/infoBtn"
            android:layout_width="296dp"
            android:layout_height="136dp"
            android:src="@drawable/info"
            android:scaleType="fitCenter"
            android:background="#00FFFFFF"

            android:text="Info" />

        <ImageButton
            android:id="@+id/expBtn"
            android:layout_width="296dp"
            android:layout_height="136dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"

            android:src="@drawable/esplora"
            android:text="Esplora" />

        <ImageButton
            android:id="@+id/videoBtn"
            android:layout_width="296dp"
            android:layout_height="136dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/videocall_icon"
            android:text="Videocall"

            app:layout_column="0"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/misBtn"
            android:layout_width="296dp"
            android:layout_height="136dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"

            android:src="@drawable/esame"
            android:text="Misura" />

        <ImageButton
            android:id="@+id/gymBtn"
            android:layout_width="296dp"
            android:layout_height="136dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"

            android:src="@drawable/gym"
            android:text="Gym" />

        <ImageButton
            android:id="@+id/storyBtn"
            android:layout_width="296dp"
            android:layout_height="136dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"

            android:src="@drawable/story"
            android:text="Storia"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageButton
            android:id="@+id/vidBtn"
            android:layout_width="296dp"
            android:layout_height="136dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"

            android:src="@drawable/video"
            android:text="Video" />

        <ImageButton
            android:id="@+id/newsBtn"
            android:layout_width="296dp"
            android:layout_height="136dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"

            android:src="@drawable/news"
            android:text="Notizie" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>