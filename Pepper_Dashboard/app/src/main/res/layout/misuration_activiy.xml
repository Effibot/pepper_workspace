<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="344dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="344dp"
        android:text="Seleziona dispositivo da utilizzare"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageButton
            android:id="@+id/pulseButton"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@mipmap/pom3_foreground" />

        <ImageButton
            android:id="@+id/bloodBtn"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@mipmap/blood_view_foreground" />

        <ImageButton
            android:id="@+id/wiegthBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00F8F8F8"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@mipmap/bilancia_foreground" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>